<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_border"
    android:layout_margin="4dp"
    android:paddingTop="5dp">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Name :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Aadhaar :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Blood Group :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Email :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="DOB :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Gender :" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Donated :"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDonorListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Name"
            android:gravity="end"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvDonorListAadhaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Aadhaar Number"
            android:gravity="end"
            android:textColor="@color/colorAccent" />

        <TextView
            android:gravity="end"
            android:id="@+id/tvDonorListBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Blood Group"
            android:textColor="@color/colorAccent" />

        <TextView
            android:gravity="end"
            android:id="@+id/tvDonorListEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Email"
            android:textColor="@color/colorAccent" />

        <TextView
            android:gravity="end"
            android:id="@+id/tvDonorListDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="DOB"
            android:textColor="@color/colorAccent" />

        <TextView
            android:gravity="end"
            android:id="@+id/tvDonorListGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="17sp"
            android:text="Gender"
            android:textColor="@color/colorAccent" />

        <TextView
            android:gravity="end"
            android:id="@+id/tvDonorListDonatedTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="3 times"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

    </LinearLayout>
</LinearLayout>